{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "build-test-backend",
			"platform": "python",
			"dockerBuild": {
				"tag": "test_backend:latest",
				"dockerfile": "${workspaceFolder}/backend/test.Dockerfile",
				"context": "${workspaceFolder}/backend",
				"pull": true,
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"build-test-backend"
			],
			"python": {
				"file": "main.py"
			}
		},
		{
			"type": "docker-compose",
			"label": "run-compose",
			"dockerCompose": {
				"up": {
					"detached": true,
					"build": true
				},
				"files": [
					"${workspaceFolder}/docker-compose.yml"
				],
			}
		}
	]
}